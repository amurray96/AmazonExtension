{
  "manifest_version": 3,
  "name": "Amazon Subscription Estimator",
  "version": "2.1",
  "description": "Provides an estimated cost for your Amazon auto-deliveries",
  "content_scripts": [
    {
      "matches": ["https://www.amazon.com/gp/subscribe-and-save/manager/viewsubscriptions*", "https://www.amazon.com/auto-deliveries*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "amzn-16.png",
      "48": "amzn-48.png",
      "128": "amzn-128.png"
    }
  },
  "icons": {
    "16": "amzn-16.png",
    "48": "amzn-48.png",
    "128": "amzn-128.png"
  }
}
